    crear()
    mostrar()
    conocerMetodoPago()
    conocerTarifa()
}

class Recarga
{
    nroOperacion
    fechaRecarga
    monto
    crear()
    mostrar()
}

class MetodoPago
{
    nombre
    descripcion
    crear()
    mostrar()
}

class Estacionamiento
{
    plaza:Plaza
    cantPlazas
    crear()
    mostrar()
    conocerPlaza()
}

class Plaza
{
    numeroPlaza
    estado:EstadoPlaza
    fechaPlaza
    crear()
    mostrar()
    conocerEstadoPlaza()
}

class EstadoPlaza
{
    descripcion
