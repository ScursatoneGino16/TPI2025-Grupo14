    cooncerCuentaCorriente()
}

class TipoCliente
{
    nombre
    descripcion
    crear()
    mostrar()
}

class CuentaCorriente
{
    saldo
    vehiculo:Vehiculo
    recarga:Recarga
    crear()
    mostrar()
    conocerVehiculo()
    conocerRecarga()
    calcularSaldoActual()
}

class Vehiculo
{
    patente
